@model IEnumerable<VERMONT.Web.Models.Contato>

@{
    ViewBag.Title = "Lita de Contatos";
}

<h2>@ViewBag.Title</h2>

    @Html.Partial("_FiltroPartialView", ViewData["FiltroModel"])

<p>
    @Html.ActionLink("Nova Pessoa", "Create", "Pessoa", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeContato)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IdTipoContato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InfoContato)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeContato)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TipoContato.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoContato)
            </td>
            <td>
                @Html.ActionLink("Editar Pessoa", "Edit", "Pessoa", new { id = item.IdPessoa }, null) |
                @Html.ActionLink("Editar Contato", "Edit", new { id = item.IdContato }) |
                @Html.ActionLink("Novo Contato", "Create", new { id = item.IdPessoa }, null)
            </td>
        </tr>
    }

</table>



