@model VERMONT.Web.Models.ContatoFiltro
<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(Model => Model.NomePessoa)
                @Html.EditorFor(Model => Model.NomePessoa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(Model => Model.Telefone)
                @Html.EditorFor(Model => Model.Telefone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(Model => Model.Email)
                @Html.EditorFor(Model => Model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="col-md-2">
                <br />
                <input type="submit" name="Filtrar" value="Filtrar" class="btn btn-default">
            </div>

        </div>
    }
</div>